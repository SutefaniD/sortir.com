{% extends 'base.html.twig' %}

{% block title %}Filtrer{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/search.css') }}">
{% endblock %}

{% block main %}

    <main>
        <section class="info">
            <p>Date du jour : {{ "now"|date("d/m/Y") }}</p>
            <p>Participant : {{ app.user.firstName|capitalize }} {{ app.user.lastName|slice(0,1)|upper }}.</p>
        </section>

        <section class="filter">
            {{ form_start(searchForm) }}

            <fieldset>
                <legend>Filtrer les sorties</legend>
                <div class="form-left">
                    <div class="form-row">
                        {{ form_row(searchForm.site) }}
                        {{ form_row(searchForm.outingName) }}
                    </div>
                    <div class="form-row date-row">
                        {{ form_row(searchForm.startDate) }}
                        {{ form_row(searchForm.endDate) }}
                    </div>
                </div>
                <div class="form-right">
{#                    {{ form_row(searchForm.isOrganizer) }}#}
{#                    {{ form_row(searchForm.isParticipant) }}#}
{#                    {{ form_row(searchForm.isNotParticipant) }}#}
{#                    {{ form_row(searchForm.pastOutings) }}#}
                    {% for checkbox in [
                        searchForm.isOrganizer,
                        searchForm.isParticipant,
                        searchForm.isNotParticipant,
                        searchForm.pastOutings
                    ] %}
                        <div class="form-group">
                            <label>
                                {{ form_widget(checkbox) }}
                                {{ form_label(checkbox) }}
                            </label>
                        </div>
                    {% endfor %}
                </div>

                <button class="btn btn-primary">Rechercher</button>
            </fieldset>

            {{ form_end(searchForm) }}
        </section>

        <section class="results">
            {% if outings is not empty %}
                <table>
                    <thead>
                    <tr>
                        <th>Nom de la sortie</th>
                        <th>Date de la sortie</th>
                        <th>Clôture</th>
                        <th>Inscrits/places</th>
                        <th>Etat</th>
                        <th>Inscrit</th>
                        <th>Organisateur</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for outing in outings %}
                        <tr>
                            <td>{{ outing.name }}</td>
                            <td>{{ outing.startingDateTime|date("d/m/Y H:i") }}</td>
                            <td>{{ outing.registrationDeadline|date("d/m/Y H:i") }}</td>
                            <td>{{ outing.participants|length }} / {{ outing.maxParticipants }}</td>
                            <td>{{ outing.status.label.value }}</td>
                            <td>
                                {% for participant in outing.participants %}
                                    {% if participant.username == app.user.username %}
                                        x
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td><a href="">{{ outing.organizer.username }}</a></td>
                            <td>
                                <a href="">Afficher</a>
                                <a href="">Se désister</a>
                                <a href="">S'inscrire</a>
                                <a href="">Modifier</a>
                                <a href="">Publier</a>
                                <a href="">Annuler</a>
                            </td>
                        </tr>
                    {%  endfor %}

                    </tbody>
                </table>

            {% else %}
                <p>Aucune sortie trouvée.</p>
            {% endif %}
        </section>

        <section>
            <a><button>Créer une sortie</button></a>
        </section>

    </main>

{% endblock %}
