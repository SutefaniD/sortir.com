{% block main %}

    <h2>Annuler une sortie</h2>

    <div class="outing cancel-form">

        {{ form_start(form) }}


        <div style="max-width: 600px; margin: 0 auto;">
            <div class="mb-3">
                {{ form_label(form.cancelReason) }}
                {{ form_widget(form.cancelReason, {'attr': {'class': 'form-control', 'rows': 5}}) }}
            </div>

            <div style="display: flex; gap: 20px; justify-content: center; margin-top: 20px;">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-warning'}}) }}
                <a href="{{ path('outing_detail', {'id': outing.id}) }}" class="btn btn-secondary">Retour</a>
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
