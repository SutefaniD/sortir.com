<header>
    <nav>
        <div id="nav-title">
            <a href="{{ path('main_home') }}">Sortir.com</a>
        </div>

        <div class="button-list">
            {% if app.user %}
                <p class="nav-button"><a href="{{ path('main_home') }}">Accueil</a></p>

                {% if app.user and app.user.administrator == true %}
                    <p class="nav-button"><a href="{{ path('admin_all_users') }}">Participants</a></p>
                    <p class="nav-button"><a href="{{ path('admin_city_all') }}">Villes</a></p>
                    <p class="nav-button"><a href="{{ path('admin_site_all') }}">Sites</a></p>
                {% endif %}

                {% if app.user and app.user.administrator == false %}
                    <p class="nav-button"><a href="{{ path('outing_create') }}">Créer une sortie</a></p>
                    <p class="nav-button"><a href="{{ path('outing_create_location') }}">Créer un lieu</a></p>
                {% endif %}

                <p class="nav-button">Hello {{ app.user.firstName }} !</p>
                <img src="{{ asset('assets/images/account_circle.svg') }}" alt="" id="openProfile">
            {% endif %}
            {% if not app.user %}
                <p class="nav-button"><a href="{{ path('participant_create') }}">S'inscrire</a></p>
                <p class="nav-button"><a href="{{ path('app_login') }}">Se connecter</a></p>
            {% endif %}
        </div>
    </nav>
</header>
